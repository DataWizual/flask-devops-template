{
  "id": null,
  "uid": "flask-pro",
  "title": "Flask Stack Monitoring Dashboard (Pro)",
  "style": "dark",
  "timezone": "browser",
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "schemaVersion": 39,
  "version": 1,
  "tags": ["flask", "prometheus", "cadvisor", "monitoring"],
  "templating": {"list": []},
  "annotations": {"list": []},
  "panels": [
    {
      "type": "text",
      "title": "Flask Stack Monitoring Dashboard",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 3},
      "options": {
        "content": "# Flask Stack Monitoring Dashboard\n**Real-time observability for Docker-based Flask infrastructure.**\n\nMetrics source: Prometheus + cAdvisor\n",
        "mode": "markdown"
      }
    },
    {
      "title": "Total CPU Usage (%)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 3, "w": 12, "h": 7},
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total[1m])) by (job) * 100",
          "legendFormat": "{{job}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Total Memory Usage (MB)",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 3, "w": 12, "h": 7},
      "targets": [
        {
          "expr": "sum(container_memory_usage_bytes) / 1024 / 1024",
          "legendFormat": "Total"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 800},
              {"color": "red", "value": 1200}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "Network Traffic (MB/s)",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 10, "w": 12, "h": 7},
      "targets": [
        {
          "expr": "sum(rate(container_network_receive_bytes_total[1m])) / 1024 / 1024",
          "legendFormat": "Receive"
        },
        {
          "expr": "sum(rate(container_network_transmit_bytes_total[1m])) / 1024 / 1024",
          "legendFormat": "Transmit"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "MBs",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "title": "System Uptime (seconds)",
      "type": "timeseries",
      "gridPos": {"x": 12, "y": 10, "w": 12, "h": 7},
      "targets": [
        {
          "expr": "time() - process_start_time_seconds",
          "legendFormat": "Uptime"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "title": "Prometheus Targets Status",
      "type": "timeseries",
      "gridPos": {"x": 0, "y": 17, "w": 24, "h": 7},
      "targets": [
        {
          "expr": "up",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        },
        "overrides": []
      }
    }
  ],
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
    "time_options": ["5m", "15m", "1h", "6h", "12h", "24h"]
  }
}
